<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="container-fluid">
      <div class="panel panel-default">
        <div class="panel-heading text-center"><strong>Forgot Your Password?</strong></div>
      
        <div class="panel-body">
  
          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= f.error_notification %>
          
            <div class="form-inputs">
              <%= f.input :email, required: true, autofocus: true, input_html: { class: "form-control" } %>
            </div>
            <br />
            <div class="form-actions">
              <%= f.button :submit, "Send me reset password instructions", class: "btn btn-warning" %>
            </div>
          <% end %>
          
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>