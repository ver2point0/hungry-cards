<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="container-fluid">
      <div class="panel panel-default">
        <div class="panel-heading text-center"><strong>Change Your Password</strong></div>
        
        <div class="panel-body">
          
          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= f.error_notification %>
          
            <%= f.input :reset_password_token, as: :hidden %>
            <%= f.full_error :reset_password_token %>
          
            <div class="form-inputs">
              <%= f.input :password, label: "New password", required: true, autofocus: true, input_html: { class: "form-control" }, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
              <%= f.input :password_confirmation, label: "Confirm your new password", required: true, input_html: { class: "form-control" %>
            </div>
            <br />
            <div class="form-actions">
              <%= f.button :submit, "Change my password", class: "btn btn-warning" %>
            </div>
          <% end %>
          
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>