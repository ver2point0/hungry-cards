<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="container-fluid">
      <div class="panel panel-default">
        <div class="panel-heading text-center"><strong>Sign In</strong></div>
  
        <div class="panel-body">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          
            <div class="form-inputs">
              <%= f.input :email, required: false, autofocus: true, input_html: { class: "form-control" } %> <br />
              <%= f.input :password, required: false, input_html: { class: "form-control" } %>
            </div>
             <br />
            <div class="form-actions">
              <%= f.button :submit, "Sign In", class: "btn btn-warning" %>
            </div>
            <br />
          <% end %>
          
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>